[interactive]
    diffFilter = delta --color-only --dark

[delta]
    line-numbers = true
    navigate = true
    side-by-side = true

[merge]
    conflictstyle = diff3
    tool = nvim

[mergetool]
    keepBackup = false
    prompt = false

[mergetool "nvim"]
    cmd = nvim -f -c \"Gdiffsplit!\" \"$MERGED\"

[diff]
    colorMoved = default

[color]
    branch = auto
    diff   = auto
    status = auto
    ui = true

[color "branch"]
    current = yellow reverse
    local   = yellow
    remote  = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old  = red bold
    new  = green bold

[color "status"]
    added     = yellow
    changed   = green
    untracked = cyan

[core]
    autocrlf = false
    pager = delta

[credential "https://github.com"]
	  helper = !gh auth git-credential
[push]
	autoSetupRemote = true
