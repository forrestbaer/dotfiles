[user]
    name = Forrest Baer
    email = forrest@forrestbaer.com

[color]
    branch = auto
    diff   = auto
    status = auto
    ui = true

[color "branch"]
    current = yellow reverse
    local   = yellow
    remote  = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old  = red bold
    new  = green bold

[color "status"]
    added     = yellow
    changed   = green
    untracked = cyan

[core]
    autocrlf = false

[alias]
    co = checkout
    ci = commit
    st = status
    br = branch
    hist = log --all --pretty=format:\"%C(yellow)%h %C(bold blue)%ad %C(black)| %C(reset)%C(normal)%s%d %C(dim magenta)[%an]%C(reset)\" --graph --date=short
    type = cat-file -t
    dump = cat-file -p

[pager]
    diff = diff-so-fancy | less --tabs=1,5 -RFX
    show = diff-so-fancy | less --tabs=1,5 -RFX

[credential "https://github.com"]
	helper = !/usr/local/bin/gh auth git-credential
