#!/usr/bin/env bash

folders="config/nvim bin config/lsd"
files="dir_colors fonts alacritty.toml bash_profile gitconfig tmux.conf config/lsd/config.yaml config/lsd/colors.yaml config/nvim/init.lua taskrc"

for folder in $folders; do
  mkdir -p ~/.$folder
done

for file in $files; do
  rm ~/.$file
  ln -sfn ${PWD}/$file ~/.$file
done

mkdir -p ~/bin
cp ${PWD}/bin/* ~/bin

echo ""
echo "!! Don't forget to link gnupg private/public folders !!"
echo ""

# cd ~/.gnupg
# rm -rf private-keys-v1.d public-keys.d
# ln -s ${USB_DIR}/p/gpg/pk private-keys-v1.d
# ln -s ${USB_DIR}/p/gpg/pub public-keys.d
