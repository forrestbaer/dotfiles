#!/usr/bin/env bash

folders="config/khal config/khard config/task config/task/hooks config/vdirsyncer config/nvim bin gnupg vdirsyncer config/lsd"
files="dir_colors fonts alacritty.yml bash_profile gitconfig config/khal/config config/khard/khard.conf tmux.conf config/lsd/config.yaml config/lsd/colors.yaml config/nvim/init.lua config/vdirsyncer/config screenrc taskrc visidatarc"

for folder in $folders; do
  mkdir -p ~/.$folder
done

for file in $files; do
  rm ~/.$file
  ln -sfn ${PWD}/$file ~/.$file
done

mkdir -p ~/bin
cp ${PWD}/bin/* ~/bin

echo ""
echo "!! Don't forget to link gnupg private/public folders !!"
echo ""

# cd ~/.gnupg
