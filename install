#!/bin/sh

links_made=0

folders="config/nvim bin"
files="alacritty.yml bash_profile bashrc gitconfig tmux.conf config/nvim/init.lua bin/rfv"

for folder in $folders; do
  mkdir -p ~/.$folder
done

for file in $files; do
  rm ~/.$file
  ln -sfn ${PWD}/$file ~/.$file
done

mkdir -p ~/bin
cp ${PWD}/bin/* ~/bin
