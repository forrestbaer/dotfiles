#!/usr/bin/env bash

folders="config/nvim bin .gnupg"
files="alacritty.yml bash_profile gitconfig tmux.conf config/nvim/init.lua bin/rfv screenrc"

for folder in $folders; do
  mkdir -p ~/.$folder
done

for file in $files; do
  rm ~/.$file
  ln -sfn ${PWD}/$file ~/.$file
done

mkdir -p ~/bin
cp ${PWD}/bin/* ~/bin

echo ""
echo "!! Don't forget to link gnupg private/public folders !!"
echo ""

