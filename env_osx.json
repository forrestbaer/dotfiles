{
    "eslint": {
        "link": [
            {
                "source": "eslintrc.js",
                "target": "~/.eslintrc.js"
            }
        ]
    },
    "git": {
        "link": [
            {
                "source": "gitconfig",
                "target": "~/.gitconfig"
            }
        ]
    },
    "neomutt": {
        "dep": [
            "urlview"
        ],
        "link": [
            {
                "source": "neomutt/mailcap",
                "target": "~/.config/neomutt/mailcap"
            },
            {
                "source": "neomutt/muttrc",
                "target": "~/.config/neomutt/muttrc"
            }
        ]
    },
    "neovim": {
        "dep": [
            "the_silver_searcher",
            "rg",
            "jq"
        ],
        "npm": [
            "prettier",
            "eslint",
            "fixjson"
        ],
        "link": [
            {
                "source": "neovim/init.vim",
                "target": "~/.config/nvim/init.vim"
            }
        ]
    },
    "tmux": {
        "dep": [
            "pbcopy"
        ],
        "link": [
            {
                "source": "tmux.conf",
                "target": "~/.tmux.conf"
            }
        ]
    },
    "vscode": {
        "link": [
            {
                "source": "keybindings.json",
                "target": "$HOME/Library/Application\\ Support/Code/User/"
            },
            {
                "source": "settings.json",
                "target": "$HOME/Library/Application\\ Support/Code/User/"
            }
        ]
    },
    "zsh": {
        "dep": [
            "diff-so-fancy",
            "bat"
        ],
        "link": [
            {
                "source": "zsh",
                "target": "~/.zsh"
            },
            {
                "source": "zshrc",
                "target": "~/.zshrc"
            }
        ]
    }
}
